<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/activities_detail_comment_icon"
        android:drawablePadding="5dp"
        android:text="豆粉评论"
        android:textColor="@color/common_black"
        android:textSize="20sp" />

    <com.becdoor.teanotes.view.ReListView
        android:id="@+id/commonDetail_commentListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null" />

    <TextView
        android:id="@+id/commonDetail_moreCommentTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/all_margrin"
        android:layout_marginTop="@dimen/all_margrin"
        android:background="@drawable/bg_rectangle_grey_storke"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:text="查看更多"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size" />

    <LinearLayout
        android:id="@+id/commonDetail_btnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/commonDetail_prasieIv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/btn_detail_prasize" />


        <ImageView
            android:id="@+id/commonDetail_commentIv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/all_margrin"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/comment_btn_icon" />

        <ImageView
            android:id="@+id/commonDetail_collectIv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/all_margrin"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/btn_detail_collect" />

        <ImageView
            android:id="@+id/commonDetail_shareIv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/all_margrin"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/share_btn_icon" />

    </LinearLayout>

    <TextView
        android:id="@+id/commonDetail_moreDataTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/all_margrin"
        android:text="更多茶游"
        android:textColor="@color/common_black"
        android:textSize="@dimen/text_size_big" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/commonDetail_moreDataRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_15dp"
        android:layout_marginTop="@dimen/all_margrin" />
</LinearLayout>