<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_feauture_allLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_feauture_ivLayout"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_margin="10dp"
        android:layout_height="140dp">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_pic"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:text="追溯顶级口感--金斗极品大树茶"
            android:textColor="@color/common_black"
            android:singleLine="true"
            android:textSize="@dimen/text_size_big_big" />


        <TextView
            android:id="@+id/iv_function"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_size"
            android:text="取消收藏"
            android:background="@drawable/bg_rectangle_brown5"
            android:textColor="@color/white"
            android:padding="12dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="15dp"
            />

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tv_time_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_pic"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/tv_title"
            android:text="213123"
            android:textColor="@color/common_black"
            android:singleLine="true"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/tv_time_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_pic"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_time_start"
            android:text="213123"
            android:textColor="@color/common_black"
            android:singleLine="true"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>


</LinearLayout>