<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/choose_method_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_50"
        android:background="@color/common_white"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10">

        <Button
            android:id="@id/top_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawableLeft="@drawable/top_back_icon"
            android:drawablePadding="@dimen/margin_5"
            android:text="返回"
            android:textColor="@color/light_brown_text_color"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="创建茶评笔记"
            android:textColor="@color/light_brown_text_color"
            android:textSize="@dimen/activity_title_bar_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/create_tea_comment_progress_02"
        android:orientation="horizontal"
        android:weightSum="3.0">

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="1.泡前准备"
            android:textColor="#ffb1987a"
            android:textSize="@dimen/common_text_size" />

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="2.选择泡法"
            android:textColor="@color/common_white"
            android:textSize="@dimen/common_text_size" />

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="3.撰写茶评"
            android:textColor="#ffb1987a"
            android:textSize="@dimen/common_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:background="@drawable/round_white_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@id/pick_layout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height_150"
            android:layout_margin="@dimen/margin_20">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_70"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/wheel_select_bg" />
        </RelativeLayout>

        <LinearLayout
            android:id="@id/custom_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/margin_20"
            android:background="@drawable/activities_detail_name_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1.0"
                android:drawableLeft="@drawable/add_icon"
                android:drawablePadding="@dimen/margin_5"
                android:gravity="center_vertical"
                android:text="自定义泡法"
                android:textColor="#ffb1987a"
                android:textSize="@dimen/common_text_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_50"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:weightSum="3.0">

        <Button
            android:id="@id/fast_tea_comment"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/margin_5"
            android:layout_weight="1.0"
            android:background="@drawable/round_brown_btn_bg"
            android:text="快速茶评"
            android:textColor="@color/common_white"
            android:textSize="@dimen/activity_title_bar_text_size" />

        <Button
            android:id="@id/return_before"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/margin_5"
            android:layout_weight="1.0"
            android:background="@drawable/round_brown_btn_bg"
            android:text="上一步"
            android:textColor="@color/common_white"
            android:textSize="@dimen/activity_title_bar_text_size" />

        <Button
            android:id="@id/side_write_btn"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/margin_5"
            android:layout_weight="1.0"
            android:background="@drawable/round_brown_btn_bg"
            android:text="边泡边写"
            android:textColor="@color/common_white"
            android:textSize="@dimen/activity_title_bar_text_size" />
    </LinearLayout>
</LinearLayout>