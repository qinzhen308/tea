<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/safeSetting_updatePWTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginTop="@dimen/activity_20dp"
        android:background="@drawable/bg_line_top_bottom"
        android:drawableRight="@drawable/right_arrow_icon"
        android:gravity="center_vertical|left"
        android:paddingLeft="@dimen/all_margrin"
        android:paddingRight="@dimen/all_margrin"
        android:text="密码修改"
        android:textColor="@color/common_black"
        android:textSize="@dimen/text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/all_margrin"
        android:paddingRight="@dimen/all_margrin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="会员手机"
            android:textColor="@color/common_black"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/safeSetting_phoneTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/all_margrin"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/safeSetting_updatePhoneTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/all_margrin"
            android:background="@drawable/bg_rectangle_brown5"
            android:gravity="center"
            android:paddingBottom="@dimen/activity_5dp"
            android:paddingLeft="@dimen/all_margrin"
            android:paddingRight="@dimen/all_margrin"
            android:paddingTop="@dimen/activity_5dp"
            android:text="更换"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/safeSetting_phoneStateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/all_margrin"
            android:drawableLeft="@drawable/btn_authentication"
            android:drawablePadding="@dimen/activity_5dp"
            android:gravity="center"
            android:text="未认证"
            android:textColor="@color/common_black"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:background="@drawable/bg_line_top_bottom"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/all_margrin"
        android:paddingRight="@dimen/all_margrin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="会员邮箱"
            android:textColor="@color/common_black"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/safeSetting_emailTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/all_margrin"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/safeSetting_AuthenticationEmailTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/all_margrin"
            android:background="@drawable/bg_rectangle_brown5"
            android:gravity="center"
            android:paddingBottom="@dimen/activity_5dp"
            android:paddingLeft="@dimen/all_margrin"
            android:paddingRight="@dimen/all_margrin"
            android:paddingTop="@dimen/activity_5dp"
            android:text="认证"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/safeSetting_emailStateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/all_margrin"
            android:drawableLeft="@drawable/btn_authentication"
            android:drawablePadding="@dimen/activity_5dp"
            android:gravity="center"
            android:text="未认证"
            android:textColor="@color/common_black"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>
</LinearLayout>