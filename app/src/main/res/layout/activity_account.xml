<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <View
        style="@style/divider_horizontal"
        android:layout_marginTop="@dimen/all_margrin"></View>

    <TextView
        android:id="@+id/account_nomalSettingTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:background="@color/white"
        android:clickable="true"
        android:drawableRight="@drawable/right_arrow_icon"
        android:gravity="center_vertical|left"
        android:onClick="onAccountClick"
        android:paddingLeft="@dimen/all_margrin"
        android:paddingRight="@dimen/all_margrin"
        android:text="基本设置"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size" />

    <View
        style="@style/divider_horizontal"
        android:layout_marginLeft="@dimen/all_margrin"
        android:layout_marginRight="@dimen/all_margrin"></View>

    <TextView
        android:id="@+id/account_safeSettingTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:background="@color/white"
        android:clickable="true"
        android:drawableRight="@drawable/right_arrow_icon"
        android:gravity="center_vertical|left"
        android:onClick="onAccountClick"
        android:paddingLeft="@dimen/all_margrin"
        android:paddingRight="@dimen/all_margrin"
        android:text="安全设置"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size" />

    <View
        style="@style/divider_horizontal"
        android:layout_marginLeft="@dimen/all_margrin"
        android:layout_marginRight="@dimen/all_margrin"></View>

    <TextView
        android:id="@+id/account_pointGadeTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:background="@color/white"
        android:clickable="true"
        android:drawableRight="@drawable/right_arrow_icon"
        android:gravity="center_vertical|left"
        android:onClick="onAccountClick"
        android:paddingLeft="@dimen/all_margrin"
        android:paddingRight="@dimen/all_margrin"
        android:text="积分等级"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size" />

    <View
        style="@style/divider_horizontal"
        android:layout_marginLeft="@dimen/all_margrin"
        android:layout_marginRight="@dimen/all_margrin"></View>

    <TextView
        android:id="@+id/account_jpushSettingTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:background="@color/white"
        android:clickable="true"
        android:drawableRight="@drawable/right_arrow_icon"
        android:gravity="center_vertical|left"
        android:onClick="onAccountClick"
        android:paddingLeft="@dimen/all_margrin"
        android:paddingRight="@dimen/all_margrin"
        android:text="消息推送设置"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size" />

    <View style="@style/divider_horizontal"></View>

    <TextView
        android:id="@+id/account_clearCacheTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:layout_marginTop="@dimen/activity_20dp"
        android:background="@color/white"
        android:clickable="true"
        android:drawableRight="@drawable/right_arrow_icon"
        android:gravity="center_vertical|left"
        android:onClick="onAccountClick"
        android:paddingLeft="@dimen/all_margrin"
        android:paddingRight="@dimen/all_margrin"
        android:text="清除浏览缓存"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/account_logoutTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginLeft="@dimen/all_margrin"
        android:layout_marginRight="@dimen/all_margrin"
        android:layout_marginTop="@dimen/activity_40dp"
        android:background="@drawable/bg_rectangle_red"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onAccountClick"
        android:text="安全退出"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_big" />
</LinearLayout>