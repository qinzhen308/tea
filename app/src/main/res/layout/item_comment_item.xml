<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_white"
    android:orientation="vertical"
    android:padding="@dimen/margin_10">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@id/type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/common_black"
            android:textSize="@dimen/big_text_size" />

        <TextView
            android:id="@id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:text=""
            android:textColor="@color/common_black"
            android:textSize="@dimen/big_text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_note"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@id/head_layout"
            android:layout_width="@dimen/height_60"
            android:layout_height="@dimen/height_60">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@id/head_iv"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/pic_head"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/common_white" />

            <TextView
                android:id="@id/comm_rank_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/head_iv"
                android:layout_centerHorizontal="true"
                android:background="@drawable/member_grade_bg"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_5"
                android:paddingRight="@dimen/margin_5"
                android:text=""
                android:textColor="@color/common_white"
                android:textSize="@dimen/small_text_size" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@id/author_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:text=""
                android:textColor="@color/light_brown_text_color"
                android:textSize="@dimen/common_text_size"
                android:visibility="visible" />

            <TextView
                android:id="@id/add_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:text=""
                android:textColor="@color/common_text_color_gray"
                android:textSize="@dimen/small_text_size"
                android:visibility="visible" />

            <TextView
                android:id="@id/content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/common_black"
                android:textSize="@dimen/common_text_size"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:background="@drawable/round_brown_btn_bg"
        android:orientation="vertical"
        android:padding="@dimen/margin_10">

        <TextView
            android:id="@id/ptime_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#fff7e1ca"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@id/comm_content_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:text=""
            android:textColor="@color/common_white"
            android:textSize="@dimen/common_text_size" />
    </LinearLayout>

    <TextView
        android:id="@id/delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="10dp"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/round_red_btn_bg"
        android:paddingBottom="@dimen/margin_5"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:paddingTop="@dimen/margin_5"
        android:text="删除"
        android:textColor="@color/common_white"
        android:textSize="@dimen/small_text_size" />
</LinearLayout>