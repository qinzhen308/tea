<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/base_title" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_20dp"
            android:background="@drawable/bg_circle_white">

            <ImageView
                android:id="@+id/f_rank_avatarIv"
                android:layout_width="@dimen/avatar_size_most"
                android:layout_height="@dimen/avatar_size_most"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/activity_5dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_login_user" />
        </RelativeLayout>

        <TextView
            android:id="@+id/f_rank_rankNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-20dp"
            android:background="@drawable/bg_rectangle_brown"
            android:gravity="center"
            android:paddingBottom="@dimen/activity_3dp"
            android:paddingLeft="@dimen/all_margrin"
            android:paddingRight="@dimen/all_margrin"
            android:paddingTop="@dimen/activity_3dp"
            android:text="斗粉粉"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/f_rank_nickNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/all_margrin"
            android:gravity="center"
            android:text="某某"
            android:textColor="@color/common_black"
            android:textSize="@dimen/text_size_big" />

        <TextView
            android:id="@+id/f_rank_pointTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/all_margrin"
            android:gravity="center"
            android:text="积分"
            android:textColor="@color/common_black"
            android:textSize="@dimen/text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/all_margrin"
            android:layout_marginRight="@dimen/all_margrin"
            android:layout_marginTop="@dimen/activity_20dp"
            android:background="@drawable/bg_rectangle_white_coner"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_15dp"
            android:paddingLeft="@dimen/all_margrin"
            android:paddingRight="@dimen/all_margrin"
            android:paddingTop="@dimen/activity_5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="称号"
                    android:textColor="@color/common_black"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="积分"
                    android:textColor="@color/common_black"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <com.becdoor.teanotes.view.ReListView
                android:id="@+id/f_rank_rankListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:listSelector="@android:color/transparent"
                android:scrollbars="none" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_20dp"
            android:layout_marginTop="@dimen/activity_20dp"
            android:text="积分规则:"
            android:textColor="@color/common_black"
            android:textSize="@dimen/text_size_big"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/f_rank_ruleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_20dp"
            android:layout_marginLeft="@dimen/activity_20dp"
            android:orientation="vertical" />
    </LinearLayout>

</ScrollView>