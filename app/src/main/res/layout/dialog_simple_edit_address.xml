<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/dialog_enrollOnline_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/activity_40dp"
            android:layout_marginRight="@dimen/activity_40dp"
            android:background="@drawable/bg_rectangle_black_coner"
            android:padding="@dimen/activity_8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_height"
                    android:background="@color/bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/all_margrin"
                    android:text="编辑地址"
                    android:textColor="#705840"
                    android:textSize="@dimen/text_size_big_big" />

                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/all_margrin"
                    android:background="@null"
                    android:hint="请填入地址"
                    android:layout_margin="10dp"
                    android:textColor="@color/common_black"
                    android:textColorHint="@color/text_grey"
                    android:textSize="@dimen/text_size" />

                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/activity_20dp"
                    android:background="@drawable/round_brown_btn_bg"
                    android:text="确定"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_big" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/dialog_enrollOnline_layout1"
            android:layout_alignTop="@+id/dialog_enrollOnline_layout1"
            android:layout_marginRight="-10dp"
            android:layout_marginTop="-20dp"
            android:src="@drawable/activities_dialog_detail_icon" />

    </RelativeLayout>
</RelativeLayout>