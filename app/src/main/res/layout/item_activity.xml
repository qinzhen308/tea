<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_activity_allLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_activity_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/item_activity_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/item_activity_typeIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/all_margrin" />

        <TextView
            android:id="@+id/item_activity_titleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/black_transparent_bg"
            android:gravity="center_vertical|left"
            android:padding="@dimen/all_margrin"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_big" />

        <TextView
            android:id="@+id/item_activity_enrollTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_activity_titleTv"
            android:layout_marginLeft="@dimen/all_margrin"
            android:layout_marginTop="-20dp"
            android:background="@drawable/activities_hot_bg"
            android:gravity="center"
            android:padding="5dp"
            android:text="火热报名中"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/all_margrin"
        android:background="@color/white"
        android:padding="@dimen/all_margrin">

        <TextView
            android:id="@+id/item_activity_timeShowTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="活动时间"
            android:textColor="@color/common_black"
            android:textSize="@dimen/text_size_big" />

        <TextView
            android:id="@+id/item_activity_timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/item_activity_timeShowTv"
            android:gravity="center_vertical|left"
            android:text="活动时间"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/item_activity_addressShowTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/item_activity_timeShowTv"
            android:layout_marginTop="@dimen/all_margrin"
            android:gravity="center"
            android:text="活动地点"
            android:textColor="@color/common_black"
            android:textSize="@dimen/text_size_big" />

        <TextView
            android:id="@+id/item_activity_addressTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_activity_timeShowTv"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/all_margrin"
            android:layout_toRightOf="@+id/item_activity_addressShowTv"
            android:gravity="center_vertical|left"
            android:text="活动时间"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>
</LinearLayout>