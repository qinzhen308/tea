<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_activityManager_allLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_activityManager_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/all_margrin"
        android:layout_marginRight="@dimen/all_margrin"
        android:layout_marginTop="@dimen/all_margrin"
        android:background="@drawable/bg_line_top_bottom">

        <ImageView
            android:id="@+id/item_activityManager_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/item_activityManager_titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/activity_20dp"
            android:layout_marginTop="@dimen/all_margrin"
            android:layout_toRightOf="@+id/item_activityManager_iv"
            android:gravity="center_vertical"
            android:text="标题"
            android:textColor="@color/common_black"
            android:textSize="@dimen/text_size_big"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_activityManager_startTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_activityManager_titleTv"
            android:layout_marginLeft="@dimen/activity_20dp"
            android:layout_marginTop="@dimen/activity_5dp"
            android:layout_toRightOf="@+id/item_activityManager_iv"
            android:gravity="center_vertical"
            android:text="开始时间:"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/item_activityManager_endTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_activityManager_startTimeTv"
            android:layout_marginLeft="@dimen/activity_20dp"
            android:layout_marginTop="@dimen/activity_5dp"
            android:layout_toRightOf="@+id/item_activityManager_iv"
            android:gravity="center_vertical"
            android:text="结束时间:"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/item_activityManager_stateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_activityManager_iv"
            android:layout_marginBottom="@dimen/all_margrin"
            android:layout_marginLeft="@dimen/activity_20dp"
            android:layout_toRightOf="@+id/item_activityManager_iv"
            android:background="@drawable/bg_btn_grey_care"
            android:gravity="center"
            android:paddingBottom="@dimen/activity_5dp"
            android:paddingLeft="@dimen/activity_15dp"
            android:paddingRight="@dimen/activity_15dp"
            android:paddingTop="@dimen/activity_5dp"
            android:text="活动结束"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>
</LinearLayout>