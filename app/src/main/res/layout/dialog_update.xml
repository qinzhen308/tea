<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rectangle_white_coner"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_10"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="@dimen/margin_10"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/dialog_updateTextTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="已是最新版本" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dialog_update_liji"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_10"
                android:background="@drawable/bg_rectangle_brown5"
                android:gravity="center"
                android:text="立即更新"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/dialog_update_shaohou"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_10"
                android:background="@drawable/bg_rectangle_red5"
                android:gravity="center"
                android:text="稍后更新"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>