<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_seminarDetail_titleTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:background="#E2E2E2"
        android:gravity="center_vertical|left"
        android:paddingLeft="@dimen/all_margrin"
        android:textColor="@color/common_black"
        android:textSize="@dimen/text_size_big_big"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_seminarDetail_contentTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/all_margrin"
        android:gravity="center_vertical|left"
        android:textColor="@color/common_black"
        android:textSize="@dimen/text_size" />

    <ImageView
        android:id="@+id/item_seminarDetail_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/item_seminarDetail_tagTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/all_margrin"
        android:background="@drawable/bg_rectangle_brown"
        android:gravity="center"
        android:paddingBottom="@dimen/activity_5dp"
        android:paddingLeft="@dimen/all_margrin"
        android:paddingRight="@dimen/all_margrin"
        android:paddingTop="@dimen/activity_5dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_big"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/item_seminarDetail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

</LinearLayout>