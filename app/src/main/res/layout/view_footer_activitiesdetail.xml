<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/activities_detail_comment_icon"
        android:drawablePadding="5dp"
        android:text="斗粉评论"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <com.becdoor.teanotes.view.ReListView
        android:id="@+id/activitiesDetail_commentListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null" />

    <TextView
        android:id="@+id/activitiesDetail_moreCommentTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/all_margrin"
        android:layout_marginTop="@dimen/all_margrin"
        android:background="@drawable/bg_rectangle_white_storke"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:text="查看更多"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size" />

    <LinearLayout
        android:id="@+id/activitiesDetail_btnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/all_margrin"
        android:layout_marginRight="@dimen/all_margrin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activitiesDetail_enrollIv1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/icon_enroll" />

        <ImageView
            android:id="@+id/activitiesDetail_commentIv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/all_margrin"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/comment_btn_icon" />


        <ImageView
            android:id="@+id/activitiesDetail_collectIv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/all_margrin"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/btn_detail_collect" />

        <ImageView
            android:id="@+id/activitiesDetail_shareIv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/all_margrin"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/share_btn_icon" />

    </LinearLayout>

</LinearLayout>