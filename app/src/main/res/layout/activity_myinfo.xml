<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_20dp"
            android:background="@drawable/bg_circle_white">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/myinfo_avatarIv"
                android:layout_width="@dimen/avatar_size_most"
                android:layout_height="@dimen/avatar_size_most"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/activity_5dp"
                 />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_15dp"
            android:text="点击上传头像"
            android:textColor="@color/common_black"
            android:textSize="@dimen/text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_30dp"
            android:background="@drawable/bg_line_top_bottom"
            android:orientation="vertical"
            android:paddingLeft="@dimen/all_margrin"
            android:paddingRight="@dimen/all_margrin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="昵称"
                    android:textColor="@color/common_black"
                    android:textSize="@dimen/text_size" />

                <EditText
                    android:id="@+id/myinfo_nicknameEdt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/activity_20dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:textColor="@color/common_black"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height"
                android:background="@drawable/bg_line_top_bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="性别"
                    android:textColor="@color/common_black"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/myinfo_sexTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/activity_20dp"
                    android:drawableRight="@drawable/icon_next"
                    android:gravity="center_vertical"
                    android:textColor="@color/common_black"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="生日"
                    android:textColor="@color/common_black"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/myinfo_birthdayTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/activity_20dp"
                    android:drawableRight="@drawable/icon_next"
                    android:gravity="center_vertical"
                    android:textColor="@color/common_black"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height"
                android:background="@drawable/bg_line_top_bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="家乡"
                    android:textColor="@color/common_black"
                    android:textSize="@dimen/text_size" />

                <EditText
                    android:id="@+id/myinfo_addressEdt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/activity_20dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:textColor="@color/common_black"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="爱好"
                    android:textColor="@color/common_black"
                    android:textSize="@dimen/text_size" />

                <EditText
                    android:id="@+id/myinfo_hobbyEdt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/activity_20dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:textColor="@color/common_black"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/myinfo_saveTv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginLeft="@dimen/all_margrin"
            android:layout_marginRight="@dimen/all_margrin"
            android:layout_marginTop="@dimen/activity_30dp"
            android:background="@drawable/bg_rectangle_brown5"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size" />
    </LinearLayout>
</ScrollView>