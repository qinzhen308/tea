<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_msgCenter_primsg_allLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/all_margrin"
        android:background="@drawable/bg_line_top_bottom"
        android:paddingBottom="@dimen/all_margrin"
        android:paddingLeft="@dimen/activity_20dp"
        android:paddingTop="@dimen/all_margrin">

        <ImageView
            android:id="@+id/item_msgCenter_primsg_avatarIv"
            android:layout_width="@dimen/avatar_size_small"
            android:layout_height="@dimen/avatar_size_small"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_login_user" />

        <TextView
            android:id="@+id/item_msgCenter_primsg_nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/all_margrin"
            android:layout_toRightOf="@+id/item_msgCenter_primsg_avatarIv"
            android:text="name"
            android:textColor="@color/common_black"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/item_msgCenter_primsg_msgTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/item_msgCenter_primsg_avatarIv"
            android:layout_marginRight="@dimen/all_margrin"
            android:layout_marginTop="@dimen/all_margrin"
            android:text="msg"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/item_msgCenter_primsg_timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/item_msgCenter_primsg_msgTv"
            android:layout_marginTop="@dimen/all_margrin"
            android:drawableLeft="@drawable/time_big_icon"
            android:drawablePadding="@dimen/all_margrin"
            android:text="time"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_small" />

        <ImageView
            android:id="@+id/item_msgCenter_primsg_statusIv"
            android:layout_width="@dimen/activity_8dp"
            android:layout_height="@dimen/activity_8dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/all_margrin"
            android:src="@drawable/bg_circle_red" />
    </RelativeLayout>
</LinearLayout>