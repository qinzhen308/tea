<?xml version="1.0" encoding="utf-8"?><!--主页 显示-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:background="#000000"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/all_margrin">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/index_horn" />

            <com.becdoor.teanotes.view.BillboardLayout
                android:id="@+id/fragment_main_msgLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/all_margrin" />

        </LinearLayout>
        <!--推荐-->
        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/all_margrin"
            android:layout_marginRight="@dimen/all_margrin"
            android:layout_marginTop="@dimen/all_margrin"
            android:layout_weight="1.1"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/tuijian1_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/tuijian1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@+id/tuijian1_show"
                    android:layout_marginLeft="@dimen/activity_3dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher" />

                <ImageView
                    android:id="@+id/tuijian1_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/icon_tuijian" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tuijian2_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/all_margrin"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/tuijian2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@+id/tuijian2_show"
                    android:layout_marginLeft="@dimen/activity_3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/image_fabubiji" />

                <ImageView
                    android:id="@+id/tuijian2_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/icon_tuijian" />
            </RelativeLayout>

        </LinearLayout>
        <!--发布笔记 和泡茶倒计时-->
        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/all_margrin"
            android:layout_marginRight="@dimen/all_margrin"
            android:layout_marginTop="@dimen/all_margrin"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/line_fabubiji"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/image_fabubiji" />

            <ImageView
                android:id="@+id/line_paochadaojishi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/all_margrin"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/image_paochadaojishi" />
        </LinearLayout>
        <!--藏茶管理 便签管理和空间管理-->
        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/all_margrin"
            android:layout_marginRight="@dimen/all_margrin"
            android:layout_marginTop="@dimen/all_margrin"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/line_cangchaguanli"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/image_cangchaguanli" />

            <ImageView
                android:id="@+id/line_bianqianguanli"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/all_margrin"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/image_bianqianguanli" />

            <ImageView
                android:id="@+id/line_kongjianguanli"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/all_margrin"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/image_kongjianguanli" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/all_margrin"
            android:layout_marginRight="@dimen/all_margrin"
            android:layout_marginTop="@dimen/all_margrin"
            android:layout_weight="0.8"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/line_huodong"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/image_huodong" />

            <ImageView
                android:id="@+id/line_zhuanti"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/all_margrin"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/image_zhuanti" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>